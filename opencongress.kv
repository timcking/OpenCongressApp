#:kivy 1.10

<ListScreen>:
    OpenCongress:
        id:open_congress

<DetailScreen>:
    canvas.before:
        Color:
            rgba: (0, 0, 128, .3)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        size: root.width, root.height

        BoxLayout:
            orientation: 'horizontal'
            anchor_x: 'center'
            size_hint_y: None
            height: dp(150)
            padding: [0, 10, 0, 0]
            rows: 1

            Label:
                id: name
                text: ""
                text_size: self.size
                font_size: "28sp"
                halign: 'right'
                valign: 'middle'
                padding_x: dp(10)

            AsyncImage:
                id: head_shot
                allow_stretch: True

        GridLayout:
            cols:2
            padding: [10, 10, 10, 10]
            spacing: dp(5)

            Label:
                text_size: self.size
                text: "State"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: state
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Chamber"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: chamber
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Party"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: party
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Missed Votes"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: votes
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Birthday"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: birthday
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Phone"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: phone
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

            Label:
                text_size: self.size
                text: "Address"
                halign: 'right'
                valign: 'middle'
                size_hint_y: None
                height: dp(30)
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: address
                multiline:False
                size_hint_y: None
                height: dp(30)
                background_color: [128, 128, 128, .7]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(20)
            rows: 1
            
            Label:
                text: "Web"

            Label:
                text: "VoteSmart"

            Label:
                text: "GovTrack"

            Label:
                text: "CRP"

        Button:
            id: button_detail
            text: 'Back'
            size_hint_y: None
            height: dp(60)
            on_press: root.manager.current = 'list'
            
<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (128, 0, 128, .1) if self.selected else (128, 128, 128, .3)
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

<OpenCongress>:
    rvSenate: rvSenate
    rvHouse: rvHouse
    tabbed_panel: tabbed_panel
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        height: dp(30)
        size_hint_y: None
        rows: 1

        TextInput:
            id: search_chamber
            height: dp(30)
            hint_text: 'Search'
            size_hint_y: None
            multiline: False
            padding: dp(5), dp(5), 0, 0

    TabbedPanel:
        do_default_tab: False
        id: tabbed_panel

        TabbedPanelItem:
            text:"Senate"
            id: senate_panel

            RecycleView:
                id: rvSenate
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(128)
                bar_width: dp(10)
                viewclass: 'SelectableLabel'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)

        TabbedPanelItem:
            text:"House"
            id: house_panel

            RecycleView:
                id: rvHouse
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(128)
                bar_width: dp(10)
                viewclass: 'SelectableLabel'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)

BoxLayout:
    ScreenManager:
        id:sm
        ListScreen:
            name: 'list'
        DetailScreen:
            name: 'detail'

