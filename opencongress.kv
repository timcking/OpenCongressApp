#:kivy 1.10

<ListScreen>:
    OpenCongress:
        id:open_congress
        Button:
            id: button_list
            text: 'Go To Detail'
            size_hint_y: None
            height: dp(60)
            on_press: root.manager.current = 'detail'

<DetailScreen>:
    canvas.before:
        Color:
            rgba: (0, 0, 128, .3)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        size: root.width, root.height

        BoxLayout:
            orientation: 'horizontal'
            anchor_x: 'center'
            size_hint_y: None
            rows: 1

            Label:
                text: "Name"
                font_size: "30sp"

            Image:
                source: 'sherrod.jpg'

        GridLayout:
            cols:2

            Label:
                text_size: self.size
                bcolor: 1,0,1,1
                padding_x: '10dp'
                text: "State"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: state
                multiline:False
                size_hint_x: None
                width: 700

            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Chamber"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: chamber
                size_hint_x: None
                multiline:False
                size_hint_x: None
                width: 700

            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Party"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: party
                size_hint_x: None
                multiline:False
                width: 700

            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Missed Votes %"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: votes
                size_hint_x: None
                multiline:False
                width: 700


            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Birthday"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: birthday
                multiline:False
                size_hint_x: None
                width: 700

            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Phone"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: Phone
                size_hint_x: None
                multiline:False
                width: 700

            Label:
                text_size: self.size
                padding_x: '10dp'
                text: "Address"
                halign: 'right'
                valign: 'middle'
                size_hint_x: None
                width: 100

            TextInput:
                id: address
                size_hint_x: None
                multiline:False
                width: 700

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            rows: 1
            
            Label:
                text: "Contact"
                size_hint_y: None

            Label:
                text: "Web"
                size_hint_y: None

            Label:
                text: "VoteSmart"
                size_hint_y: None

            Label:
                text: "GovTrack"
                size_hint_y: None

            Label:
                text: "CRP"
                size_hint_y: None

        Button:
            id: button_detail
            text: 'Back'
            size_hint_y: None
            height: dp(60)
            on_press: root.manager.current = 'list'
            
  
<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (128, 0, 128, .1) if self.selected else (128, 128, 128, .3)
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

<OpenCongress>:
    rv: rv
    rv2: rv2
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        height: dp(30)
        size_hint_y: None
        rows: 1

        TextInput:
            id: search_chamber
            height: dp(30)
            hint_text: 'Search'
            size_hint_y: None
            multiline: False
            padding: dp(5), dp(5), 0, 0

    TabbedPanel:
        do_default_tab: False

        TabbedPanelItem:
            text:"Senate"

            RecycleView:
                id: rv
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(128)
                bar_width: dp(10)
                viewclass: 'SelectableLabel'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)

        TabbedPanelItem:
            text:"House"

            RecycleView:
                id: rv2
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(128)
                bar_width: dp(10)
                viewclass: 'SelectableLabel'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)

BoxLayout:
    ScreenManager:
        id:sm
        ListScreen:
            name: 'list'
        DetailScreen:
            name: 'detail'

